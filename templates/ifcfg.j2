# {{ ansible_managed }}
DEVICE={{ vm_nic }}
ONBOOT=yes
TYPE=Ethernet
USERCTL=no
{% if vm_ip and vm_gateway and vm_cidr and convert_dhcp_to_static|bool %}
BOOTPROTO=none
PEERDNS=yes
NM_CONTROLLED=yes
IPADDR={{ vm_ip }}
GATEWAY={{ vm_gateway }}
PREFIX={{ vm_cidr }}
{% else %}
BOOTPROTO=dhcp
PEERDNS=yes
NM_CONTROLLED=yes
{% endif %}
